---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import { BookOpen } from "lucide-react";
---

<DashboardLayout title="Áreas de Conhecimento">
    <div class="flex flex-col items-center justify-center min-h-[50vh] text-center p-8">
        <div class="p-4 bg-slate-100 rounded-full mb-4">
            <BookOpen class="w-12 h-12 text-slate-400" />
        </div>
        <h1 class="text-2xl font-bold text-slate-900">Áreas de Conhecimento</h1>
        <p class="text-slate-500 mt-2 max-w-md">
            Esta funcionalidade está em desenvolvimento. Em breve você poderá gerenciar as áreas de conhecimento dos projetos aqui.
        </p>
    </div>
</DashboardLayout>
