# Database
DATABASE_URL=postgresql://user:password@host/neondb
DATABASE_URL_PROD=postgresql://user:password@host/neondb_prod
USE_PROD_DB=false

# Auth
BETTER_AUTH_SECRET=0c1ff7534789eb33c91a67077321f752e7d976c36a56d15f8dc9010ed37e9941
BETTER_AUTH_URL=http://127.0.0.1:4321

# Object Storage (Railway Buckets in production, S3_* fallback for local dev / MinIO)
# Railway auto-injects: ENDPOINT, REGION, ACCESS_KEY_ID, SECRET_ACCESS_KEY, BUCKET
# For local development with MinIO, set these:
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=gerenciador-projetos

# Sentry
SENTRY_AUTH_TOKEN=your-token

# Resend
RESEND_API_KEY=your-token

# Inngest (Notification Queue)
# Get from: https://app.inngest.com
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key
INNGEST_DEV=1
# Required in production: public URL Inngest cloud uses to call back into /api/inngest
# Without this, cron jobs (scheduled notifications) will never fire.
# Set to your Vercel deployment URL, e.g. https://your-app.vercel.app
INNGEST_SERVE_HOST=https://your-app.vercel.app

# Pusher (Real-time Notifications)
# Get from: https://dashboard.pusher.com
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Public Pusher credentials (exposed to frontend)
PUBLIC_PUSHER_KEY=your-pusher-key
PUBLIC_PUSHER_CLUSTER=us2

# Application URL (for email links)
PUBLIC_URL=http://localhost:4321

# ── Railway Deployment ──────────────────────────────────────
# Set DEPLOY_TARGET=railway in Railway's build environment variables.
# Railway auto-sets PORT; @astrojs/node reads it automatically.
# Update these URLs to your Railway domain:
#   BETTER_AUTH_URL=https://your-app.up.railway.app
#   PUBLIC_URL=https://your-app.up.railway.app
#   INNGEST_SERVE_HOST=https://your-app.up.railway.app