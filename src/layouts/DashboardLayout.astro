---
import "@/styles/globals.css";
import { Header } from "@/components/layout/header";
import { Sidebar } from "@/components/layout/sidebar";

import { auth } from "@/lib/auth";

interface Props {
	title: string;
}

const { title } = Astro.props;
const session = await auth.api.getSession({
	headers: Astro.request.headers,
});
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Sistema de Gestão de Planejamento e Orçamento Integrados - Prefeitura de Cuiabá"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / SEO -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content="Sistema de Gestão de Planejamento e Orçamento Integrados - Prefeitura de Cuiabá"
		/>
		<meta property="og:image" content="/og-image.png" />

		<title>{title}</title>
	</head>
	<body class="bg-background min-h-screen font-sans antialiased">
		<Header client:load user={session?.user} />
		<div class="flex">
			<Sidebar client:load user={session?.user} />
			<main class="flex-1 container mx-auto max-w-7xl p-6 sm:p-8">
				<slot />
			</main>
		</div>
	</body>
</html>
