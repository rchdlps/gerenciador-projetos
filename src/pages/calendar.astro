---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import { Calendar as CalendarIcon } from "lucide-react";
---

<DashboardLayout title="Calendário de Projetos">
    <div class="flex flex-col items-center justify-center min-h-[50vh] text-center p-8">
        <div class="p-4 bg-slate-100 rounded-full mb-4">
            <CalendarIcon class="w-12 h-12 text-slate-400" />
        </div>
        <h1 class="text-2xl font-bold text-slate-900">Calendário de Projetos</h1>
        <p class="text-slate-500 mt-2 max-w-md">
            Visualize prazos, entregas e marcos importantes de todos os projetos em uma única visão cronológica.
        </p>
    </div>
</DashboardLayout>
