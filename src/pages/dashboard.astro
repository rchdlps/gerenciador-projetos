---
import Layout from "../layouts/DashboardLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import {
    Activity,
    Users,
    FileText,
    CheckCircle2,
    Briefcase,
    Calendar,
    ArrowRight,
} from "lucide-react";
import { OverviewCharts } from "@/components/dashboard/charts/overview-charts";

import { db } from "@/lib/db";
import { projects, users } from "../../db/schema";
import { count, inArray } from "drizzle-orm";
import { getPageContext } from "@/lib/queries/page-context";

// Single call gets auth + user + org scope + sidebar data
const ctx = await getPageContext(Astro.request.headers);
if (!ctx) return Astro.redirect("/login");

const { isSuperAdmin, activeOrgId, orgIds, orgSessionData } = ctx;

const shouldFilter = orgIds !== null && orgIds.length > 0;
const showEmptyState = orgIds !== null && orgIds.length === 0;

// Fetch ALL dashboard data in a single parallel batch
// allProjects (with relations) contains everything we need for metrics + charts
let usersCount = { count: 0 };
let allProjects: any[] = [];

if (!showEmptyState) {
    const projectsQuery = shouldFilter
        ? db.query.projects.findMany({
            where: inArray(projects.organizationId, orgIds!),
            with: { phases: { with: { tasks: true } }, organization: true },
        })
        : db.query.projects.findMany({
            with: { phases: { with: { tasks: true } }, organization: true },
        });

    // Run both queries in parallel
    const [totalUsers, projectsResult] = await Promise.all([
        db.select({ count: count() }).from(users),
        projectsQuery,
    ]);

    usersCount = totalUsers[0];
    allProjects = projectsResult;
} else {
    const [totalUsers] = await db.select({ count: count() }).from(users);
    usersCount = totalUsers;
}

// Compute ALL metrics in-memory from allProjects (zero extra DB queries)
const projectsCount = { count: allProjects.length };

const allTasks = allProjects.flatMap((p: any) =>
    p.phases.flatMap((ph: any) => ph.tasks)
);
const activeTasksCount = allTasks.filter((t: any) => t.status !== "done").length;
const completedTasksCount = allTasks.filter((t: any) => t.status === "done").length;

// Charts: Projects by Type
const projectsByTypeMap = new Map<string, number>();
allProjects.forEach((p: any) => {
    const type = p.type || "Projeto";
    projectsByTypeMap.set(type, (projectsByTypeMap.get(type) || 0) + 1);
});
const projectsByType = Array.from(projectsByTypeMap.entries()).map(
    ([name, value]) => ({ name, value }),
);
if (projectsByType.length === 0) projectsByType.push({ name: "N/A", value: 0 });

// Charts: Project Status
const projectsByStatusMap = new Map<string, number>();
const statusLabels: Record<string, string> = {
    em_andamento: "Em Andamento",
    concluido: "Concluído",
    suspenso: "Suspenso",
    cancelado: "Cancelado",
    recorrente: "Recorrente",
    proposta: "Proposta",
    planejamento: "Planejamento",
};
Object.keys(statusLabels).forEach((key) => projectsByStatusMap.set(key, 0));
allProjects.forEach((p: any) => {
    const status = p.status || "em_andamento";
    projectsByStatusMap.set(status, (projectsByStatusMap.get(status) || 0) + 1);
});
const projectsByStatus = Array.from(projectsByStatusMap.entries())
    .filter(([_, value]) => value > 0)
    .map(([key, value]) => ({ name: statusLabels[key] || key, value }));

// Charts: Progress per Organization
const orgStats = new Map<string, { total: number; done: number }>();
allProjects.forEach((p: any) => {
    if (p.organization) {
        const orgName = p.organization.code || p.organization.name;
        const current = orgStats.get(orgName) || { total: 0, done: 0 };
        const pTasks = p.phases.flatMap((ph: any) => ph.tasks);
        orgStats.set(orgName, {
            total: current.total + pTasks.length,
            done: current.done + pTasks.filter((t: any) => t.status === "done").length,
        });
    }
});
const projectsByOrg = Array.from(orgStats.entries()).map(([name, stats]) => ({
    name,
    progress: stats.total > 0 ? Math.round((stats.done / stats.total) * 100) : 0,
}));
if (projectsByOrg.length === 0) projectsByOrg.push({ name: "N/A", progress: 0 });

const completionRate = {
    completed: projectsByStatusMap.get("concluido") || 0,
    recorrente: projectsByStatusMap.get("recorrente") || 0,
    total: allProjects.length,
};

// Get active org name from orgSessionData (no extra DB query needed)
const activeOrgName = orgSessionData?.activeOrganization?.name || "Todas as Secretarias";
---

<Layout title="Dashboard" session={ctx.session} orgSessionData={orgSessionData}>
    <div class="space-y-12 custom-scrollbar pr-2">
        {/* Header Principal */}
        <div
            class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 border-b border-slate-200 pb-6"
        >
            <div>
                <h1 class="text-3xl font-bold tracking-tight text-slate-900">
                    Dashboard
                </h1>
                <p class="text-muted-foreground mt-1">
                    {
                        activeOrgId ? (
                            <span>
                                Dados de{" "}
                                <span class="font-medium text-primary">
                                    {activeOrgName}
                                </span>
                            </span>
                        ) : isSuperAdmin ? (
                            <span class="text-amber-600">
                                Visão administrativa - Todas as organizações
                            </span>
                        ) : (
                            "Visão geral e desempenho do sistema."
                        )
                    }
                </p>
            </div>
            <div class="flex items-center gap-3">
                <span
                    class="text-xs font-medium px-3 py-1 bg-slate-100 text-slate-600 rounded-full"
                >
                    Atualizado: {
                        new Date().toLocaleString("pt-BR", {
                            day: "2-digit",
                            month: "2-digit",
                            hour: "2-digit",
                            minute: "2-digit",
                        })
                    }
                </span>
                <a
                    href="/dashboard"
                    class="flex items-center gap-1.5 text-xs font-medium px-3 py-1.5 bg-sky-50 text-sky-700 hover:bg-sky-100 rounded-full transition-colors border border-sky-200"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-3.5 h-3.5"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path
                            d="M21 12a9 9 0 11-9-9c2.52 0 4.93 1 6.74 2.74L21 8"
                        ></path>
                        <path d="M21 3v5h-5"></path>
                    </svg>
                    Atualizar
                </a>
            </div>
        </div>

        {/* Empty State */}
        {
            showEmptyState && (
                <div class="text-center py-12">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-slate-100 rounded-full mb-4">
                        <Briefcase className="w-8 h-8 text-slate-400" />
                    </div>
                    <h3 class="text-lg font-semibold text-slate-700 mb-2">
                        Nenhum dado disponível
                    </h3>
                    <p class="text-muted-foreground max-w-md mx-auto">
                        Você não está vinculado a nenhuma secretaria. Entre em
                        contato com um administrador para ter acesso.
                    </p>
                </div>
            )
        }

        {
            !showEmptyState && (
                <>
                    {/* SECTION 1: METRICS */}
                    <section class="space-y-6">
                        <div class="flex items-center justify-between">
                            <h2 class="text-xl font-semibold tracking-tight text-slate-800">
                                Métricas Principais
                            </h2>
                        </div>

                        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
                            {/* Total de Projetos - Primary Green */}
                            <Card className="hover:shadow-md transition-shadow border-l-4 border-l-primary hover:-translate-y-1 duration-300">
                                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                                    <CardTitle className="text-sm font-medium text-muted-foreground">
                                        Total de Projetos
                                    </CardTitle>
                                    <FileText className="h-4 w-4 text-primary" />
                                </CardHeader>
                                <CardContent className="pb-10">
                                    <div class="flex items-baseline space-x-2">
                                        <div class="text-3xl font-bold text-slate-800">
                                            {projectsCount.count}
                                        </div>
                                        <span class="text-xs font-medium text-primary bg-emerald-50 px-2 py-0.5 rounded-full">
                                            Ativos
                                        </span>
                                    </div>
                                    <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-primary w-[60%] rounded-full shadow-[0_0_10px_rgba(54,121,98,0.4)]"></div>
                                    </div>
                                </CardContent>
                            </Card>

                            {/* Tarefas Ativas - Sky Blue */}
                            <Card className="hover:shadow-md transition-shadow border-l-4 border-l-sky-500 hover:-translate-y-1 duration-300">
                                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                                    <CardTitle className="text-sm font-medium text-muted-foreground">
                                        Tarefas Ativas
                                    </CardTitle>
                                    <Activity className="h-4 w-4 text-sky-500" />
                                </CardHeader>
                                <CardContent className="pb-10">
                                    <div class="flex items-baseline space-x-2">
                                        <div class="text-3xl font-bold text-slate-800">
                                            {activeTasksCount}
                                        </div>
                                        <span class="text-xs font-medium text-sky-600 bg-sky-50 px-2 py-0.5 rounded-full">
                                            Em andamento
                                        </span>
                                    </div>
                                    <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-sky-500 w-[45%] rounded-full shadow-[0_0_10px_rgba(14,165,233,0.4)]"></div>
                                    </div>
                                </CardContent>
                            </Card>

                            {/* Equipe - Amber */}
                            <Card className="hover:shadow-md transition-shadow border-l-4 border-l-amber-500 hover:-translate-y-1 duration-300">
                                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                                    <CardTitle className="text-sm font-medium text-muted-foreground">
                                        Equipe
                                    </CardTitle>
                                    <Users className="h-4 w-4 text-amber-500" />
                                </CardHeader>
                                <CardContent className="pb-10">
                                    <div class="flex items-baseline space-x-2">
                                        <div class="text-3xl font-bold text-slate-800">
                                            {usersCount.count}
                                        </div>
                                        <span class="text-xs font-medium text-amber-600 bg-amber-50 px-2 py-0.5 rounded-full">
                                            Usuários
                                        </span>
                                    </div>
                                    <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-amber-500 w-[80%] rounded-full shadow-[0_0_10px_rgba(245,158,11,0.4)]"></div>
                                    </div>
                                </CardContent>
                            </Card>

                            {/* Concluídos - Emerald */}
                            <Card className="hover:shadow-md transition-shadow border-l-4 border-l-emerald-500 hover:-translate-y-1 duration-300">
                                <CardHeader className="flex flex-row items-center justify-between space-y-0 pb-2">
                                    <CardTitle className="text-sm font-medium text-muted-foreground">
                                        Tarefas Concluídas
                                    </CardTitle>
                                    <CheckCircle2 className="h-4 w-4 text-emerald-500" />
                                </CardHeader>
                                <CardContent className="pb-10">
                                    <div class="flex items-baseline space-x-2">
                                        <div class="text-3xl font-bold text-slate-800">
                                            {completedTasksCount}
                                        </div>
                                        <span class="text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-0.5 rounded-full">
                                            Total
                                        </span>
                                    </div>
                                    <div class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-emerald-500 w-[95%] rounded-full shadow-[0_0_10px_rgba(16,185,129,0.4)]"></div>
                                    </div>
                                </CardContent>
                            </Card>
                        </div>
                    </section>

                    {/* SECTION 2: CHARTS */}
                    <section class="space-y-6">
                        <div class="flex items-center justify-between border-b border-slate-200 pb-4">
                            <div>
                                <h2 class="text-xl font-semibold tracking-tight text-slate-800">
                                    Análise Detalhada
                                </h2>
                                <p class="text-sm text-muted-foreground">
                                    Distribuição de tarefas e desempenho mensal.
                                </p>
                            </div>
                        </div>
                        <OverviewCharts
                            client:visible
                            projectsByType={projectsByType}
                            projectsByStatus={projectsByStatus}
                            projectsByOrg={projectsByOrg}
                            completionRate={completionRate}
                        />
                    </section>
                </>
            )
        }
    </div>
</Layout>
