---
import Layout from "../layouts/DashboardLayout.astro";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import {
    Activity,
    Users,
    FileText,
    CheckCircle2,
    Briefcase,
    Calendar,
    ArrowRight,
} from "lucide-react";
import { OverviewCharts } from "@/components/dashboard/charts/overview-charts";
---

<Layout title="Dashboard">
    <div class="space-y-12 custom-scrollbar pr-2">
        {/* Header Principal */}
        <div
            class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 border-b border-slate-200 pb-6"
        >
            <div>
                <h1 class="text-3xl font-bold tracking-tight text-slate-900">
                    Dashboard
                </h1>
                <p class="text-muted-foreground mt-1">
                    Visão geral e desempenho do sistema.
                </p>
            </div>
            <div class="flex items-center gap-2">
                <span
                    class="text-xs font-medium px-3 py-1 bg-slate-100 text-slate-600 rounded-full"
                >
                    Última atualização: Hoje, 14:30
                </span>
            </div>
        </div>

        {/* SECTION 1: METRICS */}
        <section class="space-y-6">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold tracking-tight text-slate-800">
                    Métricas Principais
                </h2>
            </div>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
                {/* Total de Projetos - Indigo Theme */}
                <Card
                    className="hover:shadow-md transition-shadow border-l-4 border-l-indigo-500 hover:-translate-y-1 duration-300"
                >
                    <CardHeader
                        className="flex flex-row items-center justify-between space-y-0 pb-2"
                    >
                        <CardTitle
                            className="text-sm font-medium text-muted-foreground"
                            >Total de Projetos</CardTitle
                        >
                        <FileText className="h-4 w-4 text-indigo-500" />
                    </CardHeader>
                    <CardContent>
                        <div class="flex items-baseline space-x-2">
                            <div class="text-3xl font-bold text-slate-800">
                                12
                            </div>
                            <span
                                class="text-xs font-medium text-emerald-600 bg-emerald-100 px-2 py-0.5 rounded-full"
                                >+2 este mês</span
                            >
                        </div>
                        <div
                            class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"
                        >
                            <div
                                class="h-full bg-indigo-500 w-[60%] rounded-full shadow-[0_0_10px_rgba(99,102,241,0.5)]"
                            >
                            </div>
                        </div>
                    </CardContent>
                </Card>

                {/* Tarefas Ativas - Violet Theme */}
                <Card
                    className="hover:shadow-md transition-shadow border-l-4 border-l-violet-500 hover:-translate-y-1 duration-300"
                >
                    <CardHeader
                        className="flex flex-row items-center justify-between space-y-0 pb-2"
                    >
                        <CardTitle
                            className="text-sm font-medium text-muted-foreground"
                            >Tarefas Ativas</CardTitle
                        >
                        <Activity className="h-4 w-4 text-violet-500" />
                    </CardHeader>
                    <CardContent>
                        <div class="flex items-baseline space-x-2">
                            <div class="text-3xl font-bold text-slate-800">
                                45
                            </div>
                            <span
                                class="text-xs font-medium text-emerald-600 bg-emerald-100 px-2 py-0.5 rounded-full"
                                >+18%</span
                            >
                        </div>
                        <div
                            class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"
                        >
                            <div
                                class="h-full bg-violet-500 w-[45%] rounded-full shadow-[0_0_10px_rgba(139,92,246,0.5)]"
                            >
                            </div>
                        </div>
                    </CardContent>
                </Card>

                {/* Equipe - Amber Theme */}
                <Card
                    className="hover:shadow-md transition-shadow border-l-4 border-l-amber-500 hover:-translate-y-1 duration-300"
                >
                    <CardHeader
                        className="flex flex-row items-center justify-between space-y-0 pb-2"
                    >
                        <CardTitle
                            className="text-sm font-medium text-muted-foreground"
                            >Equipe</CardTitle
                        >
                        <Users className="h-4 w-4 text-amber-500" />
                    </CardHeader>
                    <CardContent>
                        <div class="flex items-baseline space-x-2">
                            <div class="text-3xl font-bold text-slate-800">
                                24
                            </div>
                            <span
                                class="text-xs font-medium text-emerald-600 bg-emerald-100 px-2 py-0.5 rounded-full"
                                >+4 novos</span
                            >
                        </div>
                        <div
                            class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"
                        >
                            <div
                                class="h-full bg-amber-500 w-[80%] rounded-full shadow-[0_0_10px_rgba(245,158,11,0.5)]"
                            >
                            </div>
                        </div>
                    </CardContent>
                </Card>

                {/* Concluídos - Emerald Theme */}
                <Card
                    className="hover:shadow-md transition-shadow border-l-4 border-l-emerald-500 hover:-translate-y-1 duration-300"
                >
                    <CardHeader
                        className="flex flex-row items-center justify-between space-y-0 pb-2"
                    >
                        <CardTitle
                            className="text-sm font-medium text-muted-foreground"
                            >Concluídos</CardTitle
                        >
                        <CheckCircle2 className="h-4 w-4 text-emerald-500" />
                    </CardHeader>
                    <CardContent>
                        <div class="flex items-baseline space-x-2">
                            <div class="text-3xl font-bold text-slate-800">
                                573
                            </div>
                            <span
                                class="text-xs font-medium text-emerald-600 bg-emerald-100 px-2 py-0.5 rounded-full"
                                >+201 jan</span
                            >
                        </div>
                        <div
                            class="mt-4 h-1.5 w-full bg-slate-100 rounded-full overflow-hidden"
                        >
                            <div
                                class="h-full bg-emerald-500 w-[95%] rounded-full shadow-[0_0_10px_rgba(16,185,129,0.5)]"
                            >
                            </div>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </section>

        {/* SECTION 2: CHARTS */}
        <section class="space-y-6">
            <div
                class="flex items-center justify-between border-b border-slate-200 pb-4"
            >
                <div>
                    <h2
                        class="text-xl font-semibold tracking-tight text-slate-800"
                    >
                        Análise Detalhada
                    </h2>
                    <p class="text-sm text-muted-foreground">
                        Distribuição de tarefas e desempenho mensal.
                    </p>
                </div>
            </div>
            <OverviewCharts client:load />
        </section>

        {/* SECTION 3: TIMELINE (Full Width) */}
        <section class="space-y-6">
            <div
                class="flex items-center justify-between border-b border-slate-200 pb-4"
            >
                <div>
                    <h2
                        class="text-xl font-semibold tracking-tight text-slate-800"
                    >
                        Linha do Tempo
                    </h2>
                    <p class="text-sm text-muted-foreground">
                        Histórico recente de atividades e atualizações.
                    </p>
                </div>
                <button
                    class="text-sm font-medium text-indigo-600 hover:text-indigo-700 flex items-center gap-1 hover:underline"
                >
                    Ver tudo <ArrowRight className="h-4 w-4" />
                </button>
            </div>

            <Card className="border-slate-200 shadow-sm">
                <CardContent className="pt-8 pb-8 px-6 md:px-10">
                    <div class="relative space-y-8">
                        {/* Connector Line */}
                        <div
                            class="absolute top-2 bottom-2 left-[19px] w-[2px] bg-slate-100 z-0"
                        >
                        </div>

                        {/* Item 1 */}
                        <div class="relative flex gap-6 group z-10 items-start">
                            <div
                                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-indigo-100 ring-4 ring-white group-hover:bg-indigo-200 transition-colors shadow-sm mt-1"
                            >
                                <Briefcase
                                    className="h-4 w-4 text-indigo-600"
                                />
                            </div>
                            <div
                                class="flex flex-col md:flex-row md:items-center md:justify-between w-full p-4 rounded-lg bg-slate-50 border border-slate-100 hover:border-indigo-100 hover:bg-indigo-50/30 transition-all"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-1">
                                        <p
                                            class="text-sm font-bold text-slate-800"
                                        >
                                            Novo projeto criado
                                        </p>
                                        <span
                                            class="text-xs font-medium text-indigo-700 bg-indigo-100/50 px-2 py-0.5 rounded-full border border-indigo-100"
                                            >Admin</span
                                        >
                                    </div>
                                    <p
                                        class="text-sm text-slate-600 leading-relaxed"
                                    >
                                        Projeto <strong
                                            >"Reforma da praça central"</strong
                                        > iniciado com sucesso.
                                    </p>
                                </div>
                                <span
                                    class="text-xs font-medium text-slate-400 mt-2 md:mt-0 whitespace-nowrap"
                                    >Há 2 horas</span
                                >
                            </div>
                        </div>

                        {/* Item 2 */}
                        <div class="relative flex gap-6 group z-10 items-start">
                            <div
                                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-emerald-100 ring-4 ring-white group-hover:bg-emerald-200 transition-colors shadow-sm mt-1"
                            >
                                <CheckCircle2
                                    className="h-4 w-4 text-emerald-600"
                                />
                            </div>
                            <div
                                class="flex flex-col md:flex-row md:items-center md:justify-between w-full p-4 rounded-lg bg-slate-50 border border-slate-100 hover:border-emerald-100 hover:bg-emerald-50/30 transition-all"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-1">
                                        <p
                                            class="text-sm font-bold text-slate-800"
                                        >
                                            Tarefa concluída
                                        </p>
                                        <span
                                            class="text-xs font-medium text-emerald-700 bg-emerald-100/50 px-2 py-0.5 rounded-full border border-emerald-100"
                                            >João Silva</span
                                        >
                                    </div>
                                    <p
                                        class="text-sm text-slate-600 leading-relaxed"
                                    >
                                        Etapa <strong
                                            >"Instalação elétrica"</strong
                                        > finalizada e aprovada.
                                    </p>
                                </div>
                                <span
                                    class="text-xs font-medium text-slate-400 mt-2 md:mt-0 whitespace-nowrap"
                                    >Há 5 horas</span
                                >
                            </div>
                        </div>

                        {/* Item 3 */}
                        <div class="relative flex gap-6 group z-10 items-start">
                            <div
                                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-violet-100 ring-4 ring-white group-hover:bg-violet-200 transition-colors shadow-sm mt-1"
                            >
                                <Users className="h-4 w-4 text-violet-600" />
                            </div>
                            <div
                                class="flex flex-col md:flex-row md:items-center md:justify-between w-full p-4 rounded-lg bg-slate-50 border border-slate-100 hover:border-violet-100 hover:bg-violet-50/30 transition-all"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-1">
                                        <p
                                            class="text-sm font-bold text-slate-800"
                                        >
                                            Novo Membro
                                        </p>
                                        <span
                                            class="text-xs font-medium text-violet-700 bg-violet-100/50 px-2 py-0.5 rounded-full border border-violet-100"
                                            >RH</span
                                        >
                                    </div>
                                    <p
                                        class="text-sm text-slate-600 leading-relaxed"
                                    >
                                        <strong>Maria Costa</strong> entrou na equipe
                                        de Engenharia.
                                    </p>
                                </div>
                                <span
                                    class="text-xs font-medium text-slate-400 mt-2 md:mt-0 whitespace-nowrap"
                                    >Há 1 dia</span
                                >
                            </div>
                        </div>

                        {/* Item 4 */}
                        <div class="relative flex gap-6 group z-10 items-start">
                            <div
                                class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-amber-100 ring-4 ring-white group-hover:bg-amber-200 transition-colors shadow-sm mt-1"
                            >
                                <FileText className="h-4 w-4 text-amber-600" />
                            </div>
                            <div
                                class="flex flex-col md:flex-row md:items-center md:justify-between w-full p-4 rounded-lg bg-slate-50 border border-slate-100 hover:border-amber-100 hover:bg-amber-50/30 transition-all"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-1">
                                        <p
                                            class="text-sm font-bold text-slate-800"
                                        >
                                            Documento Atualizado
                                        </p>
                                        <span
                                            class="text-xs font-medium text-amber-700 bg-amber-100/50 px-2 py-0.5 rounded-full border border-amber-100"
                                            >Sistema</span
                                        >
                                    </div>
                                    <p
                                        class="text-sm text-slate-600 leading-relaxed"
                                    >
                                        Especificações técnicas do <strong
                                            >Projeto Alpha</strong
                                        > foram revisadas.
                                    </p>
                                </div>
                                <span
                                    class="text-xs font-medium text-slate-400 mt-2 md:mt-0 whitespace-nowrap"
                                    >Há 2 dias</span
                                >
                            </div>
                        </div>
                    </div>
                </CardContent>
            </Card>
        </section>
    </div>
</Layout>
