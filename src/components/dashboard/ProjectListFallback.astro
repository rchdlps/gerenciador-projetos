---
import {
    Card,
    CardHeader,
    CardTitle,
    CardDescription,
    CardContent,
    CardFooter,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { ArrowRight, Building2, Landmark } from "lucide-react";

interface Props {
    initialProjects: any[];
    organizations: any[];
}

const { initialProjects, organizations } = Astro.props;

// Group projects logic (duplicated from React component for consistent SSR)
const groupedProjects: Record<string, any[]> = {};
if (initialProjects) {
    initialProjects.forEach((p) => {
        const orgId = p.organizationId || "personal";
        if (!groupedProjects[orgId]) groupedProjects[orgId] = [];
        groupedProjects[orgId].push(p);
    });
}

const getOrgName = (orgId: string | null) => {
    if (!orgId || orgId === "personal") return "Projetos Pessoais / Legado";
    const org = organizations?.find((o) => o.id === orgId);
    return org ? `${org.code} - ${org.name}` : "Outra Secretaria";
};
---

<div class="space-y-8">
    <div
        class="flex flex-col sm:flex-row items-center justify-between gap-4 border-b pb-6"
    >
        <div>
            <h2
                class="text-3xl font-bold tracking-tight text-foreground flex items-center gap-3"
            >
                Projetos
                <!-- Static rendering doesn't know active state perfectly, so we omit the visual/global badges to avoid mismatch -->
            </h2>
            <p class="text-muted-foreground mt-1">Visualizando seus projetos</p>
        </div>
        <Button
            className="bg-primary text-white shadow-lg shadow-primary/20 transition-all"
        >
            <span class="mr-2 h-4 w-4">+</span> Novo Projeto
        </Button>
    </div>

    {/* Filters Mockup (Static) */}
    <div
        class="flex flex-col sm:flex-row gap-4 bg-muted/20 p-4 rounded-lg border opacity-50 pointer-events-none"
    >
        <div class="relative flex-1">
            <div
                class="h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
            >
                Buscar projetos...
            </div>
        </div>
        <div class="w-full sm:w-[300px]">
            <div
                class="h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            >
                Filtrar por Secretaria
            </div>
        </div>
        <div class="w-full sm:w-[200px]">
            <div
                class="h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            >
                Filtrar por Status
            </div>
        </div>
    </div>

    {
        Object.keys(groupedProjects).length === 0 ? (
            <div class="p-10 text-center text-muted-foreground">
                Carregando projetos...
            </div>
        ) : (
            <div class="space-y-12">
                {Object.entries(groupedProjects).map(([orgId, orgProjects]) => (
                    <div class="space-y-4">
                        <div class="flex items-center gap-3 border-b-2 border-primary/10 pb-2">
                            <div class="p-2 bg-primary/10 rounded-lg">
                                <Building2 className="h-6 w-6 text-primary" />
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-foreground">
                                    {getOrgName(orgId)}
                                </h3>
                                <p class="text-xs text-muted-foreground">
                                    {orgProjects.length} projetos cadastrados
                                </p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                            {orgProjects.map((project) => (
                                <div class="rounded-xl border bg-card text-card-foreground shadow-sm group relative transition-all border-border/50 h-full flex flex-col">
                                    <div class="absolute top-0 left-0 w-1 h-full bg-primary opacity-0 group-hover:opacity-100 transition-opacity" />
                                    <div class="flex flex-col space-y-1.5 p-6 pb-2 flex-grow">
                                        <div class="flex justify-between items-start">
                                            <h3 class="font-semibold tracking-tight text-lg group-hover:text-primary transition-colors line-clamp-2">
                                                {project.name}
                                            </h3>
                                            <Landmark className="h-4 w-4 text-muted-foreground/50 flex-shrink-0 ml-2" />
                                        </div>
                                        <p class="text-sm text-muted-foreground line-clamp-3 mt-2">
                                            {project.description}
                                        </p>
                                    </div>
                                    <div class="p-6 pb-10 pt-2 mt-auto">
                                        <div class="flex items-center text-xs text-muted-foreground gap-2 mb-2">
                                            <span
                                                class={`px-2 py-0.5 rounded-full text-[10px] font-bold border ${
                                                    project.status ===
                                                    "em_andamento"
                                                        ? "bg-sky-50 text-sky-700 border-sky-200"
                                                        : project.status ===
                                                            "concluido"
                                                          ? "bg-emerald-50 text-emerald-700 border-emerald-200"
                                                          : "bg-gray-50 text-gray-700 border-gray-200"
                                                }`}
                                            >
                                                {project.status ===
                                                "em_andamento"
                                                    ? "Em Andamento"
                                                    : project.status ===
                                                        "concluido"
                                                      ? "Concluído"
                                                      : project.status}
                                            </span>
                                            <span>•</span>
                                            <span>
                                                {new Date(
                                                    project.updatedAt,
                                                ).toLocaleDateString("pt-BR")}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex items-center p-6 pt-4 border-t border-border/30 bg-muted/20">
                                        <a
                                            href={`/projects/${project.id}`}
                                            class="w-full inline-flex items-center justify-between whitespace-nowrap rounded-md text-xs font-semibold ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-transparent h-10 px-0 py-2 group-hover:text-primary"
                                        >
                                            Acessar Projeto{" "}
                                            <ArrowRight className="ml-2 h-3 w-3" />
                                        </a>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        )
    }
</div>
